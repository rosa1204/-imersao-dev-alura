EM JAVASCRIPT

var nome = "ROSA"
var notaDoPrimeiroBimestre = 9.5
var notaDoSengundoBimestre = 8.3
var notaDoTerceiroBimestre = 7.5
var notaDoQuartoBimestre = 6.9
var notaFinal = (notaDoPrimeiroBimestre + notaDoSengundoBimestre + notaDoTerceiroBimestre + notaDoQuartoBimestre) / 4
var notaFixada = notaFinal.toFixed(1)


console.log("Bem vinda " + nome)
console.log(notaFixada)

// comentario
// revisao
